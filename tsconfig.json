{
  "compilerOptions": {
    "jsx": "react", // Use this for Canvacord's custom JSX pragma
    "jsxFactory": "JSX.createElement", // Custom JSX factory for Canvacord
    "jsxFragmentFactory": "JSX.Fragment", // Custom JSX fragment for Canvacord

    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "paths": {
      "database/*": ["./src/database/*"],
      "utility/*": ["./src/utility/*"],
      "types/*": ["./src/types/*"],
      "classes/*": ["./src/classes/*"]
    }
  }
}
